<Page x:Class="MultiGameLauncher.Views.Pages.Launch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiGameLauncher.Views.Pages"
      xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:pi="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 

      Title="Launch" Width="1200" Height="675">

    <Grid>
        <Grid.Resources>
            <!-- 自定义 TabItem 样式 -->
            <Style TargetType="TabItem">
                <Setter Property="Padding" Value="0"/>
                <!-- 避免默认Padding干扰 -->
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <!-- Rectangle 的 Width 绑定到 TabItem 的 ActualWidth -->
                            <Rectangle RadiusX="10" 
                               RadiusY="10" 
                               Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}"
                               Height="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Fill="{TemplateBinding Background}" />

                            <!-- 可选：如果需要显示 Header 内容，可以加一个 ContentPresenter -->
                            <!--
                    <ContentPresenter Content="{TemplateBinding Header}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    -->
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <!-- 选中时：背景为主题色，宽度变为50 -->
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
                        <Setter Property="Width" Value="50"/>
                    </Trigger>

                    <!-- 未选中时：背景为灰色，宽度恢复默认（或设一个值） -->
                    <Trigger Property="IsSelected" Value="False">
                        <Setter Property="Background" Value="Gray" />
                        <Setter Property="Width" Value="20"/>
                        <!-- 或者不设置，让它自动 -->
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <ui:MetroTabControl Margin="0,0,0,650" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TabItem Header="Tab 1">
            </TabItem>
            <TabItem Header="Tab 2">
            </TabItem>
        </ui:MetroTabControl>
        <Grid>
            <StackPanel Background="{DynamicResource MahApps.Brushes.Accent}" Orientation="Horizontal" HorizontalAlignment="Right" Width="1200" Margin="0,580,0,0" FlowDirection="RightToLeft"/>





            <TextBlock HorizontalAlignment="Left" Margin="40,40,0,0" TextWrapping="Wrap" Text="主标题" VerticalAlignment="Top" FontSize="60" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="40,124,0,0" TextWrapping="Wrap" Text="副标题" VerticalAlignment="Top" FontSize="22"/>
            <ui:Tile Title="启动游戏" ui:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}" Background="Green" HorizontalTitleAlignment="Right" Height="95" Width="223" Margin="977,580,0,0" Click="Tile_Click_5">
                <iconPacks:PackIconModern Width="40" Height="40" Kind="ControlPlay" />
            </ui:Tile>
            <StackPanel Orientation="Horizontal" Margin="0,318,422,98"  x:Name="sp_ani">
                <StackPanel Margin="0,0,5,0">

                    <StackPanel  Orientation="Horizontal" Tag="ani">
                        <ui:Tile Title="设置"
          Tag="ani"
     Margin="10,0,5,0"
     ui:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
     Background="Teal"
     HorizontalTitleAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Height="125" Width="125" Click="Tile_Click">
                            <iconPacks:PackIconModern Width="40"
         Height="40"
         Kind="Settings" />
                        </ui:Tile>
                        <ui:Tile Title="个性化"
          Tag="ani"
     Margin="0,0,0,0"
     ui:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
     Background="#FFD474A4"
     HorizontalTitleAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Height="125" Width="125" Click="Tile_Click_1">
                            <iconPacks:PackIconModern Width="40"
     Height="40"
     Kind="DrawBrush" />
                        </ui:Tile>
                    </StackPanel>
                    <StackPanel Margin="0,5,0,0" Tag="ani">
                        <ui:Tile Title="关于"
          Tag="ani"
Margin="10,0,0,5"
ui:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
Background="Gray"
HorizontalTitleAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="255" Height="120" Click="Tile_Click_2">
                            <iconPacks:PackIconModern Width="40"
               Height="40"
               Kind="InformationCircle" />
                        </ui:Tile>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5,0,0,0" Tag="ani">
                    <ui:Tile Title="管理游戏"
    Margin="0,0,6,0"
         Tag="ani"
    ui:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
    Background="#FFC31717"
    HorizontalTitleAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="250" Click="Tile_Click_3">
                        <iconPacks:PackIconModern Width="40"
        Height="40"
        Kind="List" />
                    </ui:Tile>
                    <ui:Tile Title="检查更新"
         Tag="ani"
    Margin="0,0,0,0"
    ui:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
    Background="#FFCBA324"
    HorizontalTitleAlignment="Right" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="250" Click="Tile_Click_4">
                        <Grid Width="240" Height="210">
                            <TextBlock HorizontalAlignment="Left" Height="41" TextWrapping="Wrap" Text="更新日志" VerticalAlignment="Top" Width="105" FontSize="20" FontWeight="Bold"/>

                        </Grid>
                    </ui:Tile>
                </StackPanel>

            </StackPanel>
            <!--bar-->
        </Grid>
    </Grid>
</Page>
