<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiGameLauncher.Views.Pages"
      xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls" x:Class="MultiGameLauncher.Views.Pages.Settings"
      mc:Ignorable="d" 
      Width="1200" Height="675"
      Title="Settings">

    <StackPanel>
        <Label Content="设置" HorizontalAlignment="Left" Height="69" Margin="13,0,0,0" VerticalAlignment="Top" Width="169" FontSize="48" FontWeight="Bold"/>
        <StackPanel x:Name="sp_ani"  Margin="10,0,0,0">
            <StackPanel Orientation="Horizontal" Tag="ani" Margin="10,5,0,0">
                <TextBlock FontSize="16" Text="启动时检测更新：" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <ui:ToggleSwitch/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Tag="ani" Margin="10,5,0,0">
                <TextBlock FontSize="16" Text="随系统切换主题：" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <ui:ToggleSwitch/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Tag="ani" Margin="10,5,0,0">
                <TextBlock FontSize="16" Text="程序开机自启动：" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <ui:ToggleSwitch/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Tag="ani" Margin="10,5,0,0">
                <TextBlock FontSize="16" Text="重置所有配置项：" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <Button Width="120" FontFamily="Microsoft Yahei UI" Content="重置所有配置项" Foreground="#FFE61E1E"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Tag="ani">

            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
