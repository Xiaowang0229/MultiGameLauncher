<Page x:Class="MultiGameLauncher.Views.Pages.OOBE.OOBEImport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiGameLauncher.Views.Pages.OOBE"
      mc:Ignorable="d" 
      Title="OOBEImport" Width="1200" Height="675">

    <Grid>
        <Label Content="导入" HorizontalAlignment="Left" Height="69" Margin="13,0,0,0" VerticalAlignment="Top" Width="169" FontSize="48" FontWeight="Bold"/>
        <StackPanel x:Name="sp_ani" Margin="10,74,0,0">
            <StackPanel Tag="ani" Orientation="Horizontal" Margin="10,10,0,10">
                <Label  Content="程序名：" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="ProgramNameBlock"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="312" FontFamily="Microsoft YaHei UI" FontSize="16"/>
                <Button Content="确定"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="10,0,0,0" />

            </StackPanel>
            <StackPanel Tag="ani" Orientation="Horizontal" Margin="10,0,0,10">
                <Label  Content="主标题文本：" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="MainTitleBox"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="401" FontFamily="Microsoft YaHei UI" FontSize="16"/>
                <Button Content="确定"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="10,0,0,0"/>
                <Label Content="字体配置：" FontSize="16"/>
                <Button x:Name="Font" Content="配置…"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14"/>


            </StackPanel>
            <StackPanel Tag="ani" Orientation="Horizontal" Margin="10,0,0,10">
                <Label Content="副标题文本：" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="SubTitleBox"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="412" FontFamily="Microsoft YaHei UI" FontSize="16"/>
                <Button Content="确定"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="10,0,0,0"/>

            </StackPanel>
            <StackPanel Tag="ani" Orientation="Horizontal" Margin="10,0,0,10">
                <Label Content="背景图片（支持网络/本地）路径：" VerticalAlignment="Center" FontSize="16"/>
                <Button Content="浏览"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,10,0"/>
                <TextBox x:Name="BackGroundBlock"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="439" FontFamily="Microsoft YaHei UI" FontSize="16" Margin="0,0,5,0"/>
                <Button Content="确定"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14"/>

            </StackPanel>
            <StackPanel Tag="ani" Orientation="Horizontal" Margin="10,0,0,10">
                <Label Content="启动路径：" VerticalAlignment="Center" FontSize="16"/>
                <Button Content="浏览…"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,20,0"/>
                <Label Content="启动参数：" FontSize="16"/>
                <TextBox x:Name="ArgumentsBlock" TextWrapping="Wrap" Text="TextBox" Width="399" FontFamily="Microsoft YaHei UI" FontSize="16"/>
                <Button Content="确定"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="10,0,0,0"/>

            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
