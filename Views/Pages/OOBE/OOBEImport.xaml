<Page x:Class="MultiGameLauncher.Views.Pages.OOBE.OOBEImport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiGameLauncher.Views.Pages.OOBE"
      mc:Ignorable="d" 
      Title="OOBEImport" Width="1200" Height="675">

    <Grid>
        <Label Content="导入" HorizontalAlignment="Left" Height="69" Margin="13,0,0,0" VerticalAlignment="Top" Width="169" FontSize="48" FontWeight="Bold"/>
        <StackPanel x:Name="sp_ani" Margin="10,74,0,0">
            <StackPanel Tag="ani" 
                        Margin="10,10,0,10">
                <Label  Content="程序名：" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="ProgramNameBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="403" FontFamily="Microsoft YaHei UI" FontSize="16" LostFocus="Button_Click"/>

            </StackPanel>
            <StackPanel Tag="ani" Orientation="Horizontal" Margin="10,0,0,10">
                <StackPanel Margin="0,0,20,0">
                    <Label  Content="主标题文本：" FontSize="16" VerticalAlignment="Center"/>
                    <TextBox x:Name="MainTitleBox"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="401" FontFamily="Microsoft YaHei UI" FontSize="16" LostFocus="Button_Click_1"/>
                </StackPanel>
                <StackPanel>
                    <Label x:Name="FontLabel" Content="字体配置：" FontSize="16"/>
                    <Button x:Name="Font" Content="配置…"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Click="Font_Click"/>
                </StackPanel>




            </StackPanel>
            <StackPanel Tag="ani"  Margin="10,0,0,10">
                <Label Content="副标题文本：" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="SubTitleBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="412" FontFamily="Microsoft YaHei UI" FontSize="16" LostFocus="Button_Click_2"/>

            </StackPanel>
            <StackPanel Tag="ani"  Margin="10,0,0,10">
                <Label Content="背景视频/图片（本地）路径：(支持mp4动态背景和png静态背景)" VerticalAlignment="Center" FontSize="16"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="浏览"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,10,0" Click="Button_Click_3"/>
                </StackPanel>

            </StackPanel>
            <StackPanel Tag="ani"  Margin="10,0,0,10">
                <Label Content="启动路径：" VerticalAlignment="Center" FontSize="16"/>
                <Button Content="浏览…"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,20,0" Click="Button_Click_5" HorizontalAlignment="Left"/>


            </StackPanel>
            <StackPanel Tag="ani" Margin="10,0,0,0">
                <Label Content="启动参数：" FontSize="16"/>
                <TextBox x:Name="ArgumentsBlock" TextWrapping="Wrap" Text="" Width="399" FontFamily="Microsoft YaHei UI" FontSize="16" HorizontalAlignment="Left" LostFocus="Button_Click_6"/>
            </StackPanel>
            <StackPanel Tag="ani" FlowDirection="RightToLeft" Orientation="Horizontal">
                <Button Content="确定并应用" Width="150" Height="35" FontFamily="Microsoft Yahei UI" FontSize="14" Margin="30,100,10,10" Click="Button_Click_7" />

            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
