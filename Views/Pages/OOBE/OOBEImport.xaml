<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiGameLauncher.Views.Pages.OOBE"
      xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls" x:Class="MultiGameLauncher.Views.Pages.OOBE.OOBEImport"
      mc:Ignorable="d" 
      Title="OOBEImport" Width="1200" Height="675" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Grid>
        <Label Content="导入" HorizontalAlignment="Left" Height="69" Margin="13,0,0,0" VerticalAlignment="Top" Width="169" FontSize="48" FontWeight="Bold"/>
        <StackPanel x:Name="sp_ani" Margin="20,80,20,0">
            <StackPanel Orientation="Horizontal" Tag="ani">
                <Image Width="128" Height="128" x:Name="ApplicationIcon">
                    <Image.Source>
                        <DrawingImage>
                            <DrawingImage.Drawing>
                                <DrawingGroup xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
                                    <DrawingGroup x:Name="DrawingLayer">
                                        <DrawingGroup.ClipGeometry>
                                            <RectangleGeometry Rect="0,0,24,24" />
                                        </DrawingGroup.ClipGeometry>
                                        <GeometryDrawing Brush="#FFDC2626">
                                            <GeometryDrawing.Geometry>
                                                <PathGeometry FillRule="Nonzero" Figures="M5,4L5,20z M5,4L5,9z M7,14L10.675,14Q10.95,13.45 11.313,12.938 11.676,12.426 12.1,12L7,12z M7,18L10.05,18Q10,17.5 10,17 10,16.5 10.05,16L7,16z M3,22L3,2 13,2 19,8 19,10.3Q18.5,10.175 18,10.087 17.5,9.999 17,10L17,9 12,9 12,4 5,4 5,20 10.675,20Q10.95,20.575 11.313,21.075 11.676,21.575 12.1,22z M17,12Q19.075,12 20.538,13.463 22.001,14.926 22,17 21.999,19.074 20.537,20.538 19.075,22.002 17,22 14.925,21.998 13.463,20.537 12.001,19.076 12,17 11.999,14.924 13.463,13.463 14.927,12.002 17,12 M17,20Q17.275,20 17.463,19.813 17.651,19.626 17.65,19.35 17.649,19.074 17.463,18.888 17.277,18.702 17,18.7 16.723,18.698 16.538,18.888 16.353,19.078 16.35,19.35 16.347,19.622 16.538,19.813 16.729,20.004 17,20 M16.55,18.1L17.45,18.1 17.45,17.85Q17.45,17.575 17.6,17.362 17.75,17.149 17.95,16.95 18.3,16.65 18.5,16.375 18.7,16.1 18.7,15.6 18.7,14.875 18.225,14.438 17.75,14.001 17,14 16.425,14 15.963,14.338 15.501,14.676 15.3,15.25L16.1,15.6Q16.175,15.3 16.413,15.075 16.651,14.85 17,14.85 17.375,14.85 17.588,15.038 17.801,15.226 17.8,15.6 17.8,15.875 17.65,16.063 17.5,16.251 17.3,16.45 17.15,16.6 16.988,16.75 16.826,16.9 16.7,17.1 16.625,17.25 16.588,17.4 16.551,17.55 16.55,17.75z" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>
                                </DrawingGroup>
                            </DrawingImage.Drawing>
                        </DrawingImage>
                    </Image.Source>
                </Image>
                <StackPanel>
                    <StackPanel  Orientation="Horizontal" Margin="10,10,0,10">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="*启动路径：" VerticalAlignment="Center" FontSize="16"/>
                            <Button Content="浏览…"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,20,0" Click="Button_Click_5" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <StackPanel>
                            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                <Label x:Name="LaunchPathView"  VerticalAlignment="Center" FontSize="16"/>

                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,10">
                        <Label  Content="*程序名：" FontSize="16" VerticalAlignment="Center"/>
                        <TextBox x:Name="ProgramNameBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" Width="403" FontFamily="Microsoft YaHei UI" FontSize="16" LostFocus="Button_Click"/>
                        
                    </StackPanel>
                    
                    <StackPanel  Orientation="Horizontal" Margin="10,0,0,10">
                        <StackPanel Margin="0,0,20,0" Orientation="Horizontal">
                            <Label  Content="*主标题文本：" FontSize="16" VerticalAlignment="Center"/>
                            <TextBox x:Name="MainTitleBox" VerticalAlignment="Center" TextWrapping="Wrap" Text=""  Width="401" FontFamily="Microsoft YaHei UI" FontSize="16" LostFocus="Button_Click_1"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="FontLabel" Content="字体配置：" FontSize="16"/>
                            <Button x:Name="Font" Content="配置…"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Click="Font_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="预览效果：" FontSize="16" Margin="10,0,0,0"/>
                            <TextBlock x:Name="Fontview" Text="示例文字" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" />
                        </StackPanel>




                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0,10,10">
                        <Label Content="启动参数：" FontSize="16" Margin="0,0,0,0"/>
                        <TextBox x:Name="ArgumentsBlock" TextWrapping="Wrap" Text="" Width="399" FontFamily="Microsoft YaHei UI" FontSize="16" HorizontalAlignment="Left" LostFocus="Button_Click_6"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0,10,10">
                        <Label Content="程序图标：" VerticalAlignment="Center" FontSize="16"/>
                        <Button Content="浏览…"  Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,20,0" Click="Button_Click_8" HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Tag="ani"  Margin="0,0,0,10">

                <StackPanel>
                    <Label Content="背景视频/图片（本地）路径：(支持mp4动态背景和png静态背景,需拷贝,时间取决于文件大小)" VerticalAlignment="Center" FontSize="16"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="浏览" HorizontalAlignment="Left" Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,10,0" Click="Button_Click_3" />
                        <Button x:Name="DeleteBackground" Content="删除" HorizontalAlignment="Left" Width="160" FontFamily="Microsoft YaHei UI" FontSize="14" Margin="0,0,10,0" Click="DeleteBackground_Click" Visibility="Hidden"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <Label Content="背景模式：" VerticalAlignment="Center" FontSize="16"/>
                    <Label x:Name="Backgroundview" Content="无" VerticalAlignment="Center" FontSize="16"/>
                </StackPanel>
                <Button Content="确定并应用" Width="150" Height="35" FontFamily="Microsoft Yahei UI" FontSize="14" Click="Button_Click_7" Margin="200,10,10,10"/>

            </StackPanel>


            

        </StackPanel>
        <StackPanel Visibility="Hidden" x:Name="BackgroundCopyTip" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,338,0,0">
            <ui:ProgressRing HorizontalAlignment="Left" Height="40"  VerticalAlignment="Top" Width="40"/>
            <Label Content="请稍候，正在配置文件" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
