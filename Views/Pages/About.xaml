<Page x:Class="MultiGameLauncher.Views.Pages.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultiGameLauncher.Views.Pages"
      mc:Ignorable="d" 

      xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls"
      Title="About" Width="1200" Height="675" Loaded="Page_Loaded">

    <StackPanel>
        <Label Content="关于" HorizontalAlignment="Left" Height="69" Margin="13,0,0,0" VerticalAlignment="Top" Width="169" FontSize="48" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
            <Image x:Name="RootImage" Width="128" Height="128" Margin="7,0,10,0"/>
            <StackPanel>
                <TextBlock  TextWrapping="Wrap" Text="Rocket Launcher" Margin="0,0,0,3" FontSize="36" FontWeight="Bold" />
                <TextBlock  TextWrapping="Wrap" Text="统合式多游戏管理启动平台" FontSize="16" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock  TextWrapping="Wrap" Text="当前版本：" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <ui:Tile Title="检测更新" Height="40" Width="120" FontFamily="Microsoft YaHei UI" FontSize="16" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
