<ui:MetroWindow x:Class="MultiGameLauncher.Views.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiGameLauncher.Views.Windows"
                Topmost="True"
                WindowStartupLocation="CenterScreen"
        xmlns:ui="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
                ResizeMode="NoResize"
        Title="输入窗口" Height="200" Width="500" Loaded="MetroWindow_Loaded" Closing="MetroWindow_Closing" MinWidth="500" MinHeight="200" MaxWidth="500" MaxHeight="200">
    <StackPanel Margin="10">
        <Label Content="请输入{需要的内容}:" x:Name="InputTitleblock" FontSize="16" Margin="0,0,0,10"/>
        <TextBox x:Name="InputBox" FontSize="14" Margin="0,0,0,40" FontFamily="Microsoft YaHei UI"/>
        <Button HorizontalAlignment="Right" FontFamily="Microsoft YaHei UI" FontSize="14" Content="确定" Width="120" Click="Button_Click"/>
    </StackPanel>
</ui:MetroWindow>
